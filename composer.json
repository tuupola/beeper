{
    "name": "tuupola/beeper",
    "type": "library",
    "description": "Generic paginator for PHP 5.4+",
    "keywords": ["pager", "pagination", "paginator"],
    "homepage": "https://github.com/tuupola/beeper",
    "license": "MIT",
    "authors": [
        {
            "name": "Mika Tuupola",
            "email": "tuupola@appelsiini.net",
            "homepage": "http://www.appelsiini.net/"
        }
    ],
    "require": {
        "php" : "^7.1|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0|^8.0|^9.0",
        "overtrue/phplint": "^1.0|^2.0",
        "squizlabs/php_codesniffer": "^3.4",
        "league/fractal": "^0.15.0"
    },
    "suggest": {
        "vlucas/spot2": "Allows running Spot tests"
    },
    "autoload": {
        "psr-4": {
            "Beeper\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Beeper\\Test\\": "test"
        }
    }
}
